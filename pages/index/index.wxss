.newsTabList{
  display: flex;
}
.newsTab{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  top: 0;
  left: 0;
  background-color: #679ae6;
  height: 80rpx;
  width: 100%;
}

.news-tab{
  display: inline-block;
  align-items: center;
  margin-top:10rpx;
  font-size: 40rpx;
  line-height: 56rpx;
  color: #fff;
}

.news-tab.active{
  color:#d9d2e9;
  border-bottom: 5rpx solid #d9d2e9;
}

.news-list {
    display:flex;
}

.news-item{
  position: relative;
  display: flex;
  align-items: center;
  height:200rpx;
  margin:10rpx 10rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}

.news-profile{
  position: absolute;
  width:70%;
  height: 80%;
}

.news-title{
  font-size:30rpx;
  line-height: 42rpx;
}

.news-source{
  position: absolute;
  left: 0rpx;
  opacity: 0.5;
  bottom: 0rpx;
  font-size: 25rpx;
  line-height: 35rpx;
}

.news-date{
  position: absolute;
  right: 0rpx;
  opacity: 0.5;
  bottom: 0rpx;
  font-size: 25rpx;
  line-height: 35rpx;
}

.news-img{
  position: absolute;
  right: 5rpx;
  width: 200rpx;
  height: 200rpx;
}

.swiper-content{
  display:block;
  margin: 0;
}

.swiper-items{
  height: 100%;
}

.scoll-h{
  height: 100%;
}


